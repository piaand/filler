LIB = ar rc $(NAME) $(OBJ)

all: $(NAME)
.PHONY: all
$(NAME):
	gcc -c -Wall -Wextra -Werror $(SRC) $(INCLUDE)
	$(LIB)

.PHONY: clean
clean:
	/bin/rm -f $(OBJ) 

.PHONY: fclean
fclean: clean
	/bin/rm -f $(NAME)

re: fclean all